
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Mainscreen">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonCheckNow"
        android:textSize="50sp"
        android:background="@drawable/mybutton"
        android:text="isto é um teste de texto"
        android:onClick="checkNow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/WelcomeMsg"
        android:textSize="60sp"
        android:textStyle="bold"
        android:text="isto é um teste de texto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/description"
        android:textSize="35sp"
        android:textStyle="italic"
        android:text="isto é um teste de texto"
        android:layout_below="@+id/WelcomeMsg"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/device_info"
        android:textSize="45sp"
        android:textStyle="bold"
        android:text="isto é um teste de texto"
        android:layout_marginTop="208dp"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_device"
        android:textSize="40sp"
        android:text="isto é um teste de texto"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/device_info"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_device_name"
        android:textSize="35sp"
        android:text="isto é um teste de texto"
        android:layout_below="@+id/info_device"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_rom"
        android:textSize="40sp"
        android:text="isto é um teste de texto"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/info_device_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_rom_name"
        android:textSize="35sp"
        android:text="isto é um teste de texto"
        android:layout_below="@+id/info_rom"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_version"
        android:textSize="40sp"
        android:text="isto é um teste de texto"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/info_rom_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_version_name"
        android:textSize="35sp"
        android:text="isto é um teste de texto"
        android:layout_below="@+id/info_version"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_android_version"
        android:textSize="40sp"
        android:text="isto é um teste de texto"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/info_version_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/info_android_version_name"
        android:textSize="35sp"
        android:text="isto é um teste de texto"
        android:layout_below="@+id/info_android_version"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
